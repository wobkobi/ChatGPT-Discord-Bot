# .env.example — copy to “.env” and fill in values

# ─ Discord credentials ───────────────────────────────────────────────────────
BOT_TOKEN=                      # Your Discord bot token
CLIENT_ID=                      # Your Discord application (client) ID
OWNER_ID=                       # Your Discord user ID (bot owner)

# ─ OpenAI & encryption ──────────────────────────────────────────────────────
OPENAI_API_KEY=                 # Your OpenAI API key
ENCRYPTION_KEY=                 # AES‑256‑GCM key for data encryption

# ─ 3rd‑party media APIs ──────────────────────────────────────────────────────
TENOR_API_KEY=                  # (optional) Tenor API key for GIFs
GIPHY_API_KEY=                  # (optional) Giphy API key for GIFs

# ─ Logging & feature toggles ─────────────────────────────────────────────────
LOG_LEVEL=info                  # winston log level: error, warn, info, debug
USE_PERSONA=true               # inject persona prompt
USE_FINE_TUNED_MODEL=false      # use fine‑tuned OpenAI model
FINE_TUNED_MODEL_NAME=          # model name if fine‑tuned enabled

# ─ Memory configuration ──────────────────────────────────────────────────────
MAX_MEMORY_ENTRIES=50           # (optional) Maximum number of memory entries to include in prompts